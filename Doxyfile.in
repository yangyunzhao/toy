# Doxyfile 1.8.18

# 这个文件描述了Doxygen文档生成的所有设置。这只是一个基础配置，需要根据实际需求进行调整。

# 项目信息
PROJECT_NAME           = "Toy编译器" # 项目名称
PROJECT_NUMBER         = "1.0" # 项目版本号
PROJECT_BRIEF          = "为了学习编译器而创建的娱乐项目" # 项目简介

# 文档输出设置
OUTPUT_DIRECTORY       = . # 文档输出目录
CREATE_SUBDIRS         = NO # 是否为每个输入文件创建子目录
GENERATE_HTML          = YES # 是否生成HTML文档
GENERATE_LATEX         = NO # 是否生成LaTeX文档
GENERATE_XML           = NO # 是否生成XML文档
GENERATE_MAN           = YES # 是否生成man页
GENERATE_RTF           = NO # 是否生成RTF文档
GENERATE_DOCBOOK       = YES # 是否生成DocBook文档
GENERATE_AUTOGEN_DEF   = NO # 是否生成autogen定义文件

# 目录和文件
INPUT                  = ../include ../src ../README.CN.md  # 输入文件或目录
FILE_PATTERNS          = *.cpp *.h *.md                     # 文件模式，用于匹配输入文件
USE_MDFILE_AS_MAINPAGE = ../README.CN.md
MARKDOWN_SUPPORT       = YES

RECURSIVE              = YES # 是否递归搜索输入目录
EXCLUDE_PATTERNS       = */unittests/* # 排除模式，用于排除某些文件或目录

# 源代码设置
SOURCE_BROWSER         = YES # 是否生成源代码浏览器
INLINE_SOURCES         = YES # 是否在文档中内联源代码
STRIP_CODE_COMMENTS    = YES # 是否从源代码浏览器中剥离注释
REFERENCED_BY_RELATION = YES # 是否生成“被引用关系”
REFERENCES_RELATION    = YES # 是否生成“引用关系”
REFERENCES_LINK_SOURCE = YES # 是否在“引用关系”和“被引用关系”中链接源代码
USE_HTAGS              = NO # 是否使用htags（而不是Doxygen）生成源代码浏览器
VERBATIM_HEADERS       = YES # 是否以逐字方式复制头文件（而不是解析它们）

# 图形设置
HAVE_DOT               = YES # 是否使用Graphviz的dot工具生成图形
CALL_GRAPH             = YES # 是否生成调用图
CALLER_GRAPH           = YES # 是否生成被调用图
GRAPHICAL_HIERARCHY    = YES # 是否生成图形化的层次结构
DIRECTORY_GRAPH        = YES # 是否生成目录依赖图
DOT_IMAGE_FORMAT       = png # dot工具生成的图像格式
DOT_PATH               = "C:/Program Files/Graphviz/bin" # dot工具的路径
DOTFILE_DIRS           =  # 包含dot文件的目录
DOT_GRAPH_MAX_NODES    = 50 # dot图中的最大节点数
MAX_DOT_GRAPH_DEPTH    = 5 # dot图的最大深度

# 其他设置
ALPHABETICAL_INDEX     = YES # 是否生成字母索引
IGNORE_PREFIX          =  # 忽略的前缀

# HTML输出设置
HTML_DYNAMIC_MENUS     = YES # 是否在HTML头部添加动态菜单
HTML_OUTPUT            = ./html # HTML输出目录

# LaTeX输出设置
LATEX_OUTPUT           = latex # LaTeX输出目录

# 自动链接设置
AUTOLINK_SUPPORT       = YES # 是否支持自动链接

# 如果需要更多自定义设置，请参阅Doxygen官方文档。